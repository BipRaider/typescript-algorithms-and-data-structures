{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    //For work decorators
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
  },
  "esModuleInterop": true,
  "forceConsistentCasingInFileNames": true,
  "types": [
    "node",
    "module"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.js",
    "src/algorithms/graph/breadth-first-search/breadthFirstSearch.ts",
    "src/algorithms/math/integer-partition/__test__/integerPartition.test.Ðµs",
  ],
  "exclude": [
    "test",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "ts-node": {
    "files": true
  },
}